 <md-toolbar id="level_missions_toolbar" class="md-toolbar-tools">
      <div>

          <md-fab-actions>
            <img ng-repeat="mission in missions" ng-click="play_mission(mission)" src="http://www.clipartbest.com/cliparts/9iz/oG5/9izoG5BzT.png" height="50px" width="50px" class="box rotate">
          </md-fab-actions>

      </div>
      <span flex></span>
      <i class="material-icons" ng-click="openThemeMenu()" style="padding-right: 3px;">settings</i>
      <img ng-src={{badge.image_url.url}} class="codeGamed-toolbar-avatar" style="float: right;">
  </md-toolbar>

<div layout="row"  >
  <div flex style=" height: 465px; ">

    <md-tabs md-border-bottom style="min-height: 100%;">
      <md-tab ng-if="true" label="Video" style="background-color: #2b2b2b;">
        <md-content class="md-padding" style="background-color: transparent">

          <iframe ng-src="{{ mission_video | trusted }}" width="600" height="300" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>

        </md-content>
      </md-tab>
      <md-tab label="Problem Description">
        <md-content class="md-padding">
          <p ng-bind-html="myHTML"></p>
        </md-content>
      </md-tab>
    </md-tabs>

  </div>

  <div flex>
    <div layout="column">
      <div flex style=";position:relative;z-index: 0">
        <div id="codeEditing"></div>
      </div>

      <div style="overflow: scroll; height: 190px;">
        <div ng-repeat="test_case in test_cases" my-cool-directive>
          <h3><strong>Input: </strong>{{test_case.input}}</h3>
          <div>
            <p><strong>Output: </strong>{{test_case.output}}</p>
          </div>
        </div>
      </div>

      <md-button class="md-raised md-primary" ng-click="submitAnswer()">Submit</md-button>

    </div>

  </div>
</div>

 <md-sidenav  md-component-id="theme" md-is-open="isThemeSidenavOpen" class="md-sidenav-right " style="position: fixed">
   <i class="material-icons" ng-click="closeThemeMenu()">close</i>
   <md-list layout-padding>
     <md-list-item class="md-3-line" >
       <div class="md-list-item-text">
         <div>
           <label>Theme: </label>
           <md-select ng-model="current_theme" ng-change="update_theme()">

             <md-option ng-repeat="theme in themes" value="{{theme}}">
               {{theme}}
             </md-option>
           </md-select>
         </div>
       </div>
     </md-list-item>

   </md-list>


 </md-sidenav>


<script src="/codemirror.js"></script>