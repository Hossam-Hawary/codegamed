
<div ng-app="codeGamed" md-theme="docs-dark">
  <md-content class="md-padding" layout="column">

<p id="notice"><%= notice %></p>

<h1>Listing Test Case</h1>

<table border="1">
  <thead>
  <tr>
    <th>Level</th>
    <th>Mission</th>
    <th>Input</th>
    <th>Output</th>
    <th colspan="2">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @test_cases.each do |test_case| %>
      <tr>
        <td><%= test_case.mission.level.order %></td>
        <td><%= test_case.mission.order %></td>
        <td><%= test_case.input %></td>
        <td><%= test_case.output %></td>
        <td> <%= link_to '<md-button class="md-raised md-warn">Edit</md-button>'.html_safe, edit_test_case_path(test_case) %> </td>
        <td><%= link_to '<md-button class="md-raised md-warn">Destroy</md-button>'.html_safe, test_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to '<md-button class="md-raised md-warn">New Test Case</md-button>'.html_safe, new_test_case_path %>
  </md-content>
</div>
<script src="/form_theme.js"></script>