<div class="admin-form">
  <md-content md-theme="docs-dark" layout-gt-sm="row" layout-padding>


<%= form_for(@badge , html: { multipart: true }) do |f| %>
  <% if @badge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@badge.errors.count, "error") %> prohibited this badge from being saved:</h2>

      <ul>
      <% @badge.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
         <md-input-container  >
    <%= f.label :Title %><br>
   <%= f.text_field :title %>
         </md-input-container>
   <br>
   <br>

</div>


    <div class="field">
    <%= f.label :Image %><br>

    <%= f.file_field :image_url, accept: 'image/jpeg,image/gif,image/png ,image/bmb, image/icon' %>

   <br>
   <br>
    </div>
  <div class="actions">
          <%= f.submit :class=>'md-button md-raised  md-warn'%>
  </div>
<% end %>
</div>
</div>

<script src="/form_theme.js"></script>

