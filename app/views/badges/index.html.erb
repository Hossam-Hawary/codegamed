<div ng-app="codeGamed" md-theme="docs-dark">
  <%= link_to '<md-button class="md-raised">New Badge </md-button>'.html_safe, new_badge_path %>
  <%= link_to '<md-button class="md-raised">New Level</md-button>'.html_safe, new_level_path %>

  <md-content class="md-padding" layout="column">

    <p id="notice"><%= notice %></p>
<h1>Listing Badges </h1>
    <md-grid-list md-cols="3"  md-row-height="350px"  >


      <% @badges.each do |badge| %>
          <md-grid-tile>
            <md-card>

              <md-card-title>
                <md-card-title-text>
                  <span class="md-headline"><%= badge.title %></span>
                </md-card-title-text>
              </md-card-title>


              <md-card-content layout="row" layout-align="space-between">
                <div class="md-media-xl card-media card-image-resize" >
                  <%= image_tag badge.image_url.url if badge.image_url? %>
                </div>
              </md-card-content>
              <td> <%= link_to '<md-button class="md-raised md-warn">Edit</md-button>'.html_safe, edit_badge_path(badge) %> </td>
            </md-card>
          </md-grid-tile>
      <% end %>

    </md-grid-list>
  </md-content>
</div>
<script src="/form_theme.js"></script>