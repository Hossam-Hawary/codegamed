<p id="notice"><%= notice %></p>

<h1>Listing Badges </h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Image</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @badges.each do |badge| %>
      <tr>
        <td><%= badge.title %></td>
        <%= image_tag badge.image_url.url if badge.image_url? %>
        <br><br>
        <td><%#= link_to 'Show', badge %></td>
        <td><%= link_to 'Edit', edit_badge_path(badge) %></td>
        <td><%#= link_to 'Destroy', badge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Badge', new_badge_path %>
<%= link_to 'New Level', new_level_path %>