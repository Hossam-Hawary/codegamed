<ul>
    <% @users.each do |user| %>        
        <li>
            <%= image_tag user.image_url , class: 'codeGamed-toolbar-avatar' %> |
            <%= user.name %> |
            <%= link_to "Add Friend", friendships_path(friend_id: user), method: :post %>
        </li>
    <% end %>
</ul>

# pending requests
<ul>
    <% current_user.requested_friendships.each do |request| %>
    <li>
      <%= request.name %>
      <%#= debug(request) %>
      <%= link_to "Accept",  friendship_path(id: request.id), method: "put" %>
      <%= link_to "Decline", friendship_path(id: request.id), method: "delete" %>
    </li>
  <% end %>
</ul>

# pending Friends
<ul>
    <% current_user.pending_friends.each do |request| %>
    <li>
      <%= request.name %>
      <%#= debug(request) %>
      <%= link_to "Remove Request", friendship_path(id: request.id), method: "delete" %>
    </li>
  <% end %>
</ul>

# friends  
<ul>
  <% current_user.friends.each do |request| %>
    <li>
      <%= request.name %>
      <%#= debug(request) %>
      <%= link_to "Remove Friend", friendship_path(id: request.id), method: "delete" %>
    </li>
      <% end %>
</ul>